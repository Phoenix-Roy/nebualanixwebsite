<nav>
    <a id="logo" href="/" {% if page.url === '/' %}aria-current="page"{% endif %}>{{ 'meta.title' | translate }}</a>
    <ul>
        {% for item in navigation[page.lang] %}
        {%- set url = item.url | locale_url %}
        <li>
            <a 
                href="{{ url }}"
                {% if page.url === url %}aria-current="page"{% endif %}
            >
                {{ item.text }}
            </a>
        </li>
        {%- endfor %}
    </ul>
</nav>